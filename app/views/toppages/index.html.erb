<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
<% else %>
    <div class="row">
      <div class="col-sm-6 offset-sm-3 p-4 mb-4 mt-4 text-center border">
        <h1>#今日の積み上げ</h1>
        <p>勉強報告をして応援しあいましょう！</p>

        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

          <div class="form-group text-left">
            <%= f.label :email, 'メールアドレス' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group text-left">
            <%= f.label :password, 'パスワード' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <%= f.submit 'ログイン', class: 'btn btn-lg btn-primary' %>
        <% end %>
      </div>
  </div>
  <div class="text-center">
    <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-secondary' %>
  </div>
<% end %>
