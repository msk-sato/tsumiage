<% if current_user.cheering?(report) %>
  <%= form_with(model: user.cheers.find_by(report_id: report.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :report_id, report.id %>
    <%= f.submit 'cheer', class: 'btn btn-danger' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.cheers.build, local: true) do |f| %>
    <%= hidden_field_tag :report_id, report.id %>
    <%= f.submit 'uncheer', class: 'btn btn-primary' %>
  <% end %>
<% end %>
