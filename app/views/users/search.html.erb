<% if @users %>  
  <p>検索結果</p>
  <ul class="media-list">  
    <% @users.each do |user| %>  
      <li class="media">  
        <div class="media-left">  
          <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">  
        </div>  
        <div class="media-body">  
          <div>  
            <%= link_to user.name, user_path(user) %>  
          </div>  
          <div>  
             <p><%= user.profile %><br></p>  
          </div>  
        </div>  
      </li>  
    <% end %>  
  </ul>  
<% end %>  